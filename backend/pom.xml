    <groupId>com.gefrierschrank</groupId>
    <artifactId>gefrierschrank-backend</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>Gefrierschrank Management Backend</name>
    <description>Backend for Gefrierschrank Management PWA</description>
    
    <properties>
        <java.version>17</java.version>
    </properties>
    
    <dependencies>
        <!-- Spring Boot Starters -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.springframework.boot</groupId>
